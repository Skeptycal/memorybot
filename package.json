{
  "name": "memorybot",
  "version": "1.2.0",
  "description": "An infobot-inspired Slack bot that remembers things",
  "author": "Ian Langworth <ian@langworth.com>",
  "license": "MIT",
  "keywords": [
    "slack",
    "bot",
    "infobot"
  ],
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "start": "babel-node server.js",
    "dev": "nodemon -x babel-node server.js",
    "test": "mocha --compilers js:babel-register && npm run -s lint",
    "coverage": "babel-node ./node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- test",
    "coveralls": "istanbul-coveralls",
    "lint": "eslint *.js test lib"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": []
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "semi": 2,
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_+$",
          "varsIgnorePattern": "^_+$"
        }
      ]
    }
  },
  "homepage": "https://statico.github.io/memorybot/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/statico/memorybot.git"
  },
  "bugs": {
    "url": "https://github.com/statico/memorybot/issues"
  },
  "dependencies": {
    "artillery-async": "1.0.2",
    "botkit": "0.4.9",
    "chai": "3.5.0",
    "dotenv": "4.0.0",
    "graceful-fs": "4.1.11",
    "html-entities": "1.2.0",
    "mocha": "3.2.0",
    "random-js": "1.0.8",
    "sqlite3": "3.1.8",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-stage-2": "6.18.0",
    "babel-register": "6.18.0",
    "coveralls": "2.11.15",
    "eslint": "3.13.1",
    "istanbul": "^1.0.0-alpha",
    "istanbul-coveralls": "1.0.3",
    "mocha-lcov-reporter": "1.2.0",
    "winston-memory": "0.1.0"
  }
}
